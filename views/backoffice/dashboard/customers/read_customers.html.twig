{% extends "backoffice/layout.html.twig" %}

{% block title %}
{% endblock %}
    
{% block content %}
    <div class="w3-col l1 MarginColumn">Marge</div>

    <div class="w3-card w3-col l11 w3-margin-top w3-padding w3-responsive" id="displayAccfArea">    

        <table class="w3-centered w3-col l12 w3-hoverable w3-table-all">
            <h2 class="w3-margin w3-teal">Afficher les clients</h2>
            
            <tr>
                <th>Société</th>
                <th>Adresse de facturation</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Adresse de livraison</th>
                <th>Code Postal</th>
                <th>Ville</th>
            </tr>

            {% for customer in customers %}

            <tr>
                <td>
                    <a href="{{ path('afficher_client', { company: customer.company }) }}">{{ customer.company }}</a>
                </td>
                <td>{{ customer.billtoAddress }}</td>
                <td>{{ customer.billtoZipcode }}</td>
                <td>{{ customer.billtoCity }}</td>
                <td>{{ customer.shiptoAddress }}</td>
                <td>{{ customer.shiptoZipcode }}</td>
                <td>{{ customer.shiptoCity }}</td>
            </tr>

            {% endfor %}
           
        </table>
            
    </div>
            
{% endblock %}
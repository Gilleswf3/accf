{% extends "backoffice/layout.html.twig" %}

{% block title %}
{% endblock %}
    
{% block content %}

    <div class="w3-col l3 MarginColumn">Marge</div>

    <div class="w3-card w3-col l6 w3-margin-top w3-padding w3-responsive" id="displayAccfArea">    

        <table class="w3-centered w3-col l12 w3-hoverable w3-table-all">

            <h2 class="w3-margin w3-teal">Afficher les agences</h2>
            
            <tr>
                <th>Numéro</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Région</th>
                <th>Modification</th>
                <th>Suppression</th>
            </tr>

            {% for agency in agencies %}

            <tr>
                <td>{{ agency.idAgency }}</td>
                <td>{{ agency.address }}</td>
                <td>{{ agency.zipcode }}</td>
                <td>{{ agency.city }}</td>

                {% if agency.area == 69 %}
                    <td>Rhône-Alpes</td>
                {% else %}
                    <td>Ile de France</td>
                {% endif %}

                <td>
                    <a href="{{ path('editer_agence', { id: agency.idAgency }) }}">Modifier</a>
                </td>
               
                <td>
                    <a href="{{ path('supprimer_agence', { id: agency.idAgency }) }}">Supprimer</a>
                </td>
               
            </tr>

            {% endfor %}
           
        </table>
            
    </div>

{% endblock %}
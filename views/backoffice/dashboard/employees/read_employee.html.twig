{% extends "backoffice/layout.html.twig" %}

{% block title %}
{% endblock %}
    
{% block content %}
    <div class="w3-col l1 MarginColumn">Marge</div>

    <div class="w3-card w3-col l10 w3-margin-top w3-padding w3-responsive" id="displayAccfArea">    

        <table class="w3-centered w3-col l12 w3-hoverable w3-table-all">
            <h2 class="w3-margin w3-teal">Afficher les employés</h2>
            
            <tr>
                <th>Numéro</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Fonction</th>
                <th>Photo</th>
                <th>Niveau d'accès</th>
                <th>Agence</th>
                <th>Modification</th>
                <th>Suppression</th>
            </tr>

            {% for employee in employees %}

            <tr>
                <td>{{ employee.idEmployee }}</td>
                <td>{{ employee.firstname }}</td>
                <td>{{ employee.lastname }}</td>
                <td>{{ employee.email }}</td>
                <td>{{ employee.phone }}</td>
                <td>{{ employee.job }}</td>
                <td>
                    <img src="{{asset('images/'~employee.picture)}}" width="100" height="100"/>            
                </td>

                <td>{{ employee.role }}</td>

                {% if employee.idAgency == 1 %}
                    <td>Rhône-Alpes</td>
                {% else %}
                    <td>Ile de France</td>
                {% endif %}

                <td>
                    <a href="{{ path('editer_employe', { id: employee.idEmployee }) }}">Modifier</a>
                </td>
                
                <td>
                    <a href="{{ path('supprimer_employe', { id: employee.idEmployee }) }}">Supprimer</a>
                </td>
                
            </tr>

            {% endfor %}
           
        </table>
            
    </div>
    
{% endblock %}